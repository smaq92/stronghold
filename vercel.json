{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php",
      "config": {
        "includeFiles": [
          "public/build/**/*",
          "public/dist/**/*"  
        ]
      }
    },
    {
      "src": "vite.config.js", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public/dist"  
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "public/index.php"
    }
  ]
}
